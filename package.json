{
  "name": "salon-bliss",
  "version": "1.0.0",
  "description": "Complete Digital Salon Platform - Monorepo",
  "private": true,
  "scripts": {
    "install:frontend": "cd salon-bliss-frontend && npm install",
    "install:backend": "cd salon-bliss-backend && npm install",
    "install:all": "npm run install:backend && npm run install:frontend",
    "dev:backend": "cd salon-bliss-backend && npm run dev",
    "dev:frontend": "cd salon-bliss-frontend && npm start",
    "build:frontend": "cd salon-bliss-frontend && npm run build",
    "start:backend": "cd salon-bliss-backend && npm start",
    "deploy:vercel": "cd salon-bliss-frontend && vercel --prod",
    "deploy:railway": "cd salon-bliss-backend && railway up"
  },
  "keywords": [
    "salon",
    "booking",
    "ecommerce",
    "react",
    "nodejs",
    "mongodb"
  ],
  "author": "Salon Bliss Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/Salon-Bliss.git"
  },
  "workspaces": [
    "salon-bliss-frontend",
    "salon-bliss-backend"
  ]
}